{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",

    "allowJs": true,
    "checkJs": false,

    "paths": {
      "@/*": ["src/*"]
    },

    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },

  "include": [
    "src/**/*.js",
    "src/**/*.vue"
  ]
}
